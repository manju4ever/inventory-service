{
  "name": "inventory-service",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "npx nodemon --exec babel-node index.js",
    "deploy": "npx pm2 kill && npx pm2 start -i 2 dist/index.js",
    "clean:build": "rm -rf dist",
    "build": "npx -p @babel/cli -p @babel/core babel --copy-files ./src --out-dir dist",
    "build:serverless": "npx -p @babel/cli -p @babel/core babel --copy-files ./src --out-dir functions && cp -r config/ functions/config",
    "serve": "git pull && npm i && npm run build && npm run deploy",
    "restart:quick": "git pull && npm run buid && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manju4ever/inventory-service.git"
